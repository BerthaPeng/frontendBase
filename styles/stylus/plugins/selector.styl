$inputNormalColor = #bdbdbd
$inputFocusColor = #191919
.ellipsis
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
.form-control
  box-shadow: 0 1px 2px 0 rgba(0,0,0,.07) inset
  transition: all .2s
.selector
  display: inline-block
  width: 168px
  height: 30px
  line-height: @height
  box-sizing: border-box
  position: relative
  cursor: default
  text-align: left
  .value
    position: relative
    text-indent: 1em
    height: 100%
    border: 1px solid $inputNormalColor
    box-sizing: border-box
    @extend .form-control
    &:hover
      border-color: $inputFocusColor
      box-shadow: none
    &:after
      content: ''
      transition: all .2s
      position: absolute
      top: 50%
      right: 9px
      margin-top: -1px
      triangle: right-iso pointing-down
      width: 8px
      background-color: $inputNormalColor
  .placeholder
    color: #aaa
    
  .placeholder.selected
    color: $themeFontColor
  >ol
    display: none
    background-color: #fff
    box-sizing: border-box
    position: absolute
    top: 100%
    left: 0
    z-index: 2
    width: 100%
    border: 1px solid $inputNormalColor
    border-top: none
    margin-top: -1px
    maxHeight(300px)
    overflow: auto
    padding-bottom: 10px
    /*&:after
      position: absolute
      content: ''
      width: 100%
      height: @padding-bottom
      background: #fff
      top: 100%
      left: 0
      margin-top: -@padding-bottom*/
  li
    text-indent: 1em
    @extend .ellipsis
    &:hover
      background-color: rgba($inputNormalColor, .26)
  &.open
    ol
      display: block
    .value
      border-color: $inputNormalColor !important
      &:after
        transform: rotate(180deg)
        triangle: right-iso pointing-down
        width: 8px
        background-color: $inputFocusColor
    .has-next
      height: 16px   //height要与padding-bottom的height相同
      left: 0
      right: 0
      position:absolute
      background-color: #fff
      z-index: 10
      width: 98%
      margin-left: 1px

  &.disabled
    cursor: not-allowed
    color: #aaa
    box-shadow: none
    .value
      box-shadow: none
      border: 1px solid #E2E2E2
      &:hover
        border: @border

      

